{
    "name": "my_website",
    "private": true,
    "version": "1.0.0",
    "description": "个人工具箱网站（纯 HTML/CSS/JS）",
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint . --fix",
        "lint:css": "stylelint \"**/*.css\"",
        "lint:css:fix": "stylelint \"**/*.css\" --fix",
        "lint": "npm run format:check && npm run lint:js && npm run lint:css",
        "lint:fix": "npm run format && npm run lint:js:fix && npm run lint:css:fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.0.0",
        "prettier": "^3.2.5",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^36.0.0"
    },
    "engines": {
        "node": ">=20"
    }
}
